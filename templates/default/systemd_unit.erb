[Unit]
Description=Elasticsearch - <%= @program_name %>
Documentation=http://www.elastic.co
Wants=network-online.target
After=network-online.target

[Service]
RuntimeDirectory=<%= @program_name %>
Environment=ES_HOME=<%= @path_home %>
Environment=ES_PATH_CONF=<%= @path_conf || '/etc/elasticsearch' %>
Environment=PID_DIR=<%= @path_pid || '/var/run/elasticsearch' %>

# Load environment variables from sysconfig file
# This file can contain: ES_HEAP_SIZE, ES_HEAP_NEWSIZE, ES_DIRECT_SIZE,
# ES_JAVA_OPTS, ES_GC_LOG_FILE, ES_STARTUP_SLEEP_TIME, JAVA_HOME, ES_INCLUDE
# The "-" prefix means the file is optional (won't fail if missing)
EnvironmentFile=-<%= @default_dir %>/<%= @program_name %>

WorkingDirectory=<%= @path_home %>

User=<%= @es_user || 'elasticsearch' %>
Group=<%= @es_group || 'elasticsearch' %>

ExecStart=<%= @path_home %>/bin/elasticsearch -p ${PID_DIR}/<%= @program_name %>.pid \
        -Des.path.conf=<%= @path_conf %> \
        -Des.default.path.home=<%= @path_home %> \
        -Des.default.path.logs=<%= @path_logs %> \
        -Des.default.path.data=<%= @path_data %>

# StandardOutput is configured to redirect to journalctl since
# some error messages may be logged in standard output before
# elasticsearch logging system is initialized. Elasticsearch
# stores its logs in /var/log/elasticsearch and does not use
# journalctl by default. If you also want to enable journalctl
# logging, you can simply remove the "quiet" option from ExecStart.
StandardOutput=journal
StandardError=inherit

# Specifies the maximum file descriptor number that can be opened by this process
LimitNOFILE=65536

# Specifies the maximum number of processes
LimitNPROC=4096

# Specifies the maximum size of virtual memory
LimitAS=infinity

# Specifies the maximum file size
LimitFSIZE=infinity

# Disable timeout logic and wait until process is stopped
TimeoutStopSec=0

# SIGTERM signal is used to stop the Java process
KillSignal=SIGTERM

# Send the signal only to the JVM rather than its control group
KillMode=process

# Java process is never killed
SendSIGKILL=no

# When a JVM receives a SIGTERM signal it exits with code 143
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target

